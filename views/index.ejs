<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel Seguro v3</title>
    <style>
        body { font-family: sans-serif; background: #f0f2f5; padding: 20px; text-align: center; }
        .card { background: white; max-width: 500px; margin: 0 auto; padding: 20px; border-radius: 15px; box-shadow: 0 4px 15px rgba(0,0,0,0.1); }
        .status { padding: 15px; margin: 20px 0; border-radius: 8px; font-weight: bold; }
        .ready { background: #d1e7dd; color: #0f5132; }
        .wait { background: #fff3cd; color: #664d03; }
        .error { background: #f8d7da; color: #842029; }
        .coffee { background: #cff4fc; color: #055160; border: 2px dashed #0dcaf0; }
        .btn { padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; font-size: 16px; margin: 5px; color: white;}
        .btn-green { background: #198754; }
        .btn-red { background: #dc3545; }
        .log { text-align: left; background: #212529; color: #00ff00; padding: 10px; height: 150px; overflow-y: scroll; font-family: monospace; font-size: 12px; margin-top: 20px; border-radius: 5px; }
    </style>
</head>
<body>
    <div class="card">
        <h1>üõ°Ô∏è Bot Anti-Baneo v3</h1>
        <p>Horario: 8:00 AM - 6:00 PM (CDMX)</p>
        
        <div id="status-box" class="status wait">Esperando conexi√≥n...</div>
        
        <input type="password" id="token" placeholder="Token Secreto" style="padding: 10px; width: 80%; margin-bottom: 10px;">
        
        <div>
            <button class="btn btn-green" onclick="cmd('iniciar-bot')">‚ñ∂ ENCENDER</button>
            <button class="btn btn-red" onclick="cmd('detener-bot')">‚èπ APAGAR</button>
            <button class="btn" style="background:orange" onclick="cmd('limpiar-cola')">üóë VACIAR COLA</button>
        </div>

        <div id="qr-area" style="margin-top: 20px;"></div>
        
        <div class="log" id="logs">
            <div>> Sistema listo...</div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const logs = document.getElementById('logs');
        const statusBox = document.getElementById('status-box');
        const qrArea = document.getElementById('qr-area');

        function addLog(msg) {
            const div = document.createElement('div');
            div.textContent = `> ${msg}`;
            logs.appendChild(div);
            logs.scrollTop = logs.scrollHeight;
        }

        async function cmd(action) {
            const token = document.getElementById('token').value;
            if(!token) return alert('Pon el token');
            
            try {
                const res = await fetch(`/${action}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${token}` }
                });
                const data = await res.json();
                addLog(data.message || data.error);
            } catch(e) { addLog('Error red'); }
        }

        socket.on('status', (msg) => {
            statusBox.innerText = msg;
            if(msg.includes('Listo')) statusBox.className = 'status ready';
            else if(msg.includes('Pausa') || msg.includes('Caf√©')) statusBox.className = 'status coffee';
            else if(msg.includes('Cerrada')) statusBox.className = 'status error';
            else statusBox.className = 'status wait';
            addLog(msg);
        });

        socket.on('qr', (code) => {
            qrArea.innerHTML = `<img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=${encodeURIComponent(code)}" />`;
            statusBox.innerText = "üì∏ ESCANEA AHORA";
        });
        
        socket.on('connected', (u) => {
            qrArea.innerHTML = `<h3>üë§ ${u.name}</h3><p>${u.number}</p>`;
        });
    </script>
</body>
</html>