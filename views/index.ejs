<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhatsApp Bot - Panel de Control</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }
        
        .container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            max-width: 500px;
            width: 100%;
            overflow: hidden;
        }
        
        .header {
            background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }
        
        .header h1 {
            font-size: 28px;
            margin-bottom: 10px;
        }
        
        .header p {
            opacity: 0.9;
            font-size: 14px;
        }
        
        .content {
            padding: 30px;
        }
        
        .status-card {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 20px;
            border-left: 4px solid #25D366;
        }
        
        .status-text {
            font-size: 16px;
            color: #333;
            font-weight: 500;
            margin-bottom: 10px;
        }
        
        .status-badge {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: bold;
            text-transform: uppercase;
        }
        
        .status-badge.connecting { background: #ffc107; color: #000; }
        .status-badge.ready { background: #25D366; color: white; }
        .status-badge.error { background: #dc3545; color: white; }
        
        /* NUEVO: ESTILOS PARA EL PANEL DE CONTROL */
        .control-panel {
            display: grid; 
            grid-template-columns: 1fr 1fr; 
            gap: 10px; 
            margin-bottom: 20px;
            padding: 15px;
            background: #f1f3f5;
            border-radius: 12px;
            border: 1px solid #dee2e6;
        }

        .btn-control {
            padding: 12px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            font-size: 13px;
            transition: opacity 0.2s;
        }
        .btn-control:active { opacity: 0.8; }

        .token-input-container {
            margin-bottom: 15px;
        }
        
        .token-input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 6px;
            font-size: 14px;
            text-align: center;
        }

        .qr-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 280px;
            background: white;
            border-radius: 12px;
            border: 2px dashed #ddd;
            margin-bottom: 20px;
            position: relative;
        }
        
        .qr-container img { max-width: 250px; border-radius: 8px; }
        
        .loader {
            border: 5px solid #f3f3f3;
            border-top: 5px solid #25D366;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            animation: spin 1s linear infinite;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .success-icon {
            font-size: 80px;
            color: #25D366;
            animation: scaleIn 0.5s ease-out;
        }
        
        @keyframes scaleIn {
            0% { transform: scale(0); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }
        
        .info-box {
            background: #e3f2fd;
            border-radius: 8px;
            padding: 15px;
            margin-top: 20px;
            border-left: 4px solid #2196f3;
        }
        
        .info-box h3 {
            color: #1976d2;
            font-size: 14px;
            margin-bottom: 10px;
        }
        
        .info-box ul {
            list-style: none;
            font-size: 13px;
            color: #555;
        }
        
        .info-box li {
            padding: 5px 0;
            padding-left: 20px;
            position: relative;
        }
        
        .info-box li:before {
            content: "‚úì";
            position: absolute;
            left: 0;
            color: #25D366;
            font-weight: bold;
        }
        
        .connected-info {
            background: #d4edda;
            border: 1px solid #c3e6cb;
            border-radius: 8px;
            padding: 15px;
            margin-top: 15px;
            text-align: center;
        }
        
        .connected-info .user-name { font-size: 18px; font-weight: bold; color: #155724; margin-bottom: 5px; }
        .connected-info .user-number { font-size: 14px; color: #155724; opacity: 0.8; }

        .debug-log {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 10px;
            margin-top: 15px;
            max-height: 150px;
            overflow-y: auto;
            font-family: 'Courier New', monospace;
            font-size: 11px;
        }

        .debug-log div { padding: 2px 0; color: #495057; }
        .debug-log .error { color: #dc3545; font-weight: bold; }
        .debug-log .success { color: #28a745; font-weight: bold; }
        
        .footer {
            text-align: center;
            padding: 20px;
            color: #777;
            font-size: 12px;
            border-top: 1px solid #eee;
        }

        .connection-indicator {
            position: absolute;
            top: 10px;
            right: 10px;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #dc3545;
        }

        .connection-indicator.connected {
            background: #28a745;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üì± WhatsApp Bot</h1>
            <p>Panel de Control Seguro v2.1</p>
        </div>
        
        <div class="content">
            <div class="status-card">
                <div class="connection-indicator" id="connectionIndicator"></div>
                <div class="status-text" id="status">
                    üîå Conectando con el servidor...
                </div>
                <span class="status-badge connecting" id="badge">Iniciando</span>
            </div>

            <div class="token-input-container">
                <input type="password" id="authToken" class="token-input" placeholder="üîí Pega tu AUTH_TOKEN aqu√≠ para usar los botones">
            </div>

            <div class="control-panel">
                <button class="btn-control" onclick="controlBot('iniciar-bot')" style="background: #28a745; color: white;">
                    ‚ñ∂ ENCENDER BOT
                </button>
                
                <button class="btn-control" onclick="controlBot('detener-bot')" style="background: #dc3545; color: white;">
                    ‚èπ APAGAR BOT
                </button>
                
                <button class="btn-control" onclick="resetSession()" style="background: #6c757d; color: white; grid-column: span 2; border: 2px dashed #adb5bd;">
                    ‚ò¢Ô∏è BORRAR SESI√ìN (Forzar QR nuevo)
                </button>

                <button class="btn-control" onclick="limpiarCola()" style="background: #ffc107; color: black; grid-column: span 2;">
                    üóëÔ∏è VACIAR COLA DE MENSAJES
                </button>
            </div>
            <div class="qr-container" id="qr-container">
                <div class="loader"></div>
            </div>
            
            <div id="connected-info" style="display: none;"></div>
            
            <div class="info-box">
                <h3>‚ÑπÔ∏è Gu√≠a de Seguridad</h3>
                <ul>
                    <li>1. Si se reinicia, el bot estar√° APAGADO.</li>
                    <li>2. Pon el Token y dale a "ENCENDER".</li>
                    <li>3. Si falla mucho, usa "BORRAR SESI√ìN".</li>
                </ul>
            </div>

            <div class="debug-log" id="debugLog">
                <div class="success">üîç Consola de debug:</div>
            </div>
        </div>
        
        <div class="footer">
            Bot WhatsApp | Render Deploy (Modo Manual)
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        // Variables globales
        const statusDiv = document.getElementById('status');
        const badgeDiv = document.getElementById('badge');
        const qrContainer = document.getElementById('qr-container');
        const connectedInfo = document.getElementById('connected-info');
        const debugLog = document.getElementById('debugLog');
        const connectionIndicator = document.getElementById('connectionIndicator');
        const tokenInput = document.getElementById('authToken');

        // Funci√≥n para agregar logs de debug
        function addDebugLog(message, type = 'info') {
            const logDiv = document.createElement('div');
            logDiv.className = type;
            logDiv.textContent = `[${new Date().toLocaleTimeString()}] ${message}`;
            debugLog.appendChild(logDiv);
            debugLog.scrollTop = debugLog.scrollHeight;
        }

        // --- FUNCIONES DE CONTROL MANUAL ---
        async function controlBot(accion) {
            const token = tokenInput.value.trim();
            if (!token) {
                alert('‚ö†Ô∏è SEGURIDAD: Debes ingresar el AUTH_TOKEN en la caja de texto para usar los controles.');
                tokenInput.focus();
                return;
            }

            addDebugLog(`Enviando comando: ${accion}...`);
            try {
                const res = await fetch(`/${accion}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({}) // Cuerpo vac√≠o
                });
                
                const data = await res.json();
                if(data.success) {
                    addDebugLog(`‚úÖ √âxito: ${data.message}`, 'success');
                } else {
                    addDebugLog(`‚ùå Error: ${data.error || data.message}`, 'error');
                }
            } catch (e) {
                addDebugLog(`‚ùå Error de red: ${e.message}`, 'error');
            }
        }

        async function limpiarCola() {
            if(!confirm('¬øSeguro que quieres borrar todos los mensajes pendientes de la cola?')) return;
            controlBot('limpiar-cola');
        }

        async function resetSession() {
            if(!confirm('‚ö†Ô∏è ¬øEST√ÅS SEGURO?\n\nEsto borrar√° la conexi√≥n con WhatsApp del servidor.\nTendr√°s que volver a escanear el c√≥digo QR.\n\n√ösalo si crees que la sesi√≥n est√° fallando o corrupta.')) return;
            controlBot('reset-session');
        }

        addDebugLog('Iniciando conexi√≥n Socket.io...');
        
        // Intentar conectar Socket.io
        let socket;
        try {
            socket = io({
                transports: ['websocket', 'polling'],
                reconnection: true,
                reconnectionDelay: 1000,
                reconnectionAttempts: 10
            });
            addDebugLog('Socket.io inicializado', 'success');
        } catch (error) {
            addDebugLog('Error al inicializar Socket.io: ' + error.message, 'error');
        }

        // Eventos de conexi√≥n
        socket.on('connect', () => {
            addDebugLog('‚úÖ Conectado al servidor Web', 'success');
            statusDiv.innerText = '‚úÖ Conectado al Panel (Esperando orden)';
            connectionIndicator.className = 'connection-indicator connected';
        });

        socket.on('disconnect', () => {
            addDebugLog('‚ùå Desconectado del servidor', 'error');
            statusDiv.innerText = '‚ùå Desconectado del servidor';
            connectionIndicator.className = 'connection-indicator';
            badgeDiv.className = 'status-badge error';
            badgeDiv.innerText = 'Offline';
        });

        socket.on('connect_error', (error) => {
            addDebugLog('Error de conexi√≥n: ' + error.message, 'error');
            statusDiv.innerText = '‚ùå Error de conexi√≥n';
        });

        // Eventos personalizados
        socket.on('status', (msg) => {
            addDebugLog('Status: ' + msg);
            statusDiv.innerText = msg;
            
            if (msg.includes('Listo') || msg.includes('‚úÖ')) {
                badgeDiv.className = 'status-badge ready';
                badgeDiv.innerText = 'Conectado';
                addDebugLog('WhatsApp listo!', 'success');
            } else if (msg.includes('Error') || msg.includes('‚ùå') || msg.includes('detenido') || msg.includes('L√≠mite')) {
                badgeDiv.className = 'status-badge error';
                badgeDiv.innerText = 'Detenido';
            } else {
                badgeDiv.className = 'status-badge connecting';
                badgeDiv.innerText = 'Procesando';
            }
            
            if (msg.includes('Listo') || msg.includes('Conectado y Listo')) {
                qrContainer.innerHTML = '<div class="success-icon">‚úÖ</div>';
                addDebugLog('Bot completamente operativo', 'success');
            }
        });

        socket.on('qr', (qrCode) => {
            addDebugLog('üì∏ QR recibido! Generando imagen...', 'success');
            statusDiv.innerText = "üì∏ ¬°Escanea el c√≥digo QR ahora!";
            badgeDiv.className = 'status-badge connecting';
            badgeDiv.innerText = 'Esperando escaneo';
            
            qrContainer.innerHTML = '<div class="loader"></div>';
            
            const img = new Image();
            const qrUrl = `https://api.qrserver.com/v1/create-qr-code/?size=250x250&data=${encodeURIComponent(qrCode)}`;
            
            addDebugLog('Cargando imagen QR desde API...');
            
            img.src = qrUrl;
            img.alt = 'C√≥digo QR de WhatsApp';
            
            img.onload = () => {
                qrContainer.innerHTML = '';
                qrContainer.appendChild(img);
                addDebugLog('‚úÖ Imagen QR cargada correctamente', 'success');
            };
            
            img.onerror = () => {
                qrContainer.innerHTML = '<p style="color: #dc3545; padding: 20px;">‚ùå Error al cargar QR.</p>';
                addDebugLog('Error al cargar imagen QR', 'error');
            };
            
            connectedInfo.style.display = 'none';
        });

        socket.on('connected', (data) => {
            addDebugLog(`Usuario conectado: ${data.name}`, 'success');
            connectedInfo.style.display = 'block';
            connectedInfo.className = 'connected-info';
            connectedInfo.innerHTML = `
                <div class="user-name">üë§ ${data.name || 'Usuario'}</div>
                <div class="user-number">üìû +${data.number}</div>
            `;
        });

        // Verificar estado cada 30 segundos
        setInterval(() => {
            fetch('/status')
                .then(r => r.json())
                .then(data => {
                    console.log('Estado actual:', data);
                    // Solo loguear si hay cambios o errores para no saturar
                    if(!data.ready) {
                         addDebugLog(`Monitor: Bot NO listo. (Cola: ${data.cola_pendiente})`);
                    }
                })
                .catch(err => {
                    console.error('Error al verificar estado:', err);
                });
        }, 30000);

        addDebugLog('P√°gina cargada. Ingresa TOKEN y presiona ENCENDER.');
    </script>
</body>
</html>