<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhatsApp Bot Monitor</title>
    <style>
        body { font-family: sans-serif; display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100vh; background: #f0f2f5; margin: 0; }
        .card { background: white; padding: 2rem; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); text-align: center; max-width: 400px; width: 100%; }
        h1 { color: #075e54; }
        #status { margin: 1rem 0; font-weight: bold; color: #555; }
        #qr-container { display: flex; justify-content: center; margin-top: 1rem; min-height: 260px; }
        .loader { border: 5px solid #f3f3f3; border-top: 5px solid #075e54; border-radius: 50%; width: 50px; height: 50px; animation: spin 1s linear infinite; }
        @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
    </style>
</head>
<body>
    <div class="card">
        <h1>Bot WhatsApp</h1>
        <div id="status">Conectando con el servidor...</div>
        <div id="qr-container">
            <div class="loader"></div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const statusDiv = document.getElementById('status');
        const qrContainer = document.getElementById('qr-container');

        socket.on('status', (msg) => {
            statusDiv.innerText = msg;
            if(msg.includes('Listo') || msg.includes('Autenticado')) {
                qrContainer.innerHTML = '<h2 style="font-size: 50px;">✅</h2>';
            }
        });

        socket.on('qr', (qrCode) => {
            statusDiv.innerText = "¡Escanea el QR ahora!";
            qrContainer.innerHTML = '';
            const img = new Image();
            // Usamos una API pública rápida para generar la imagen del QR
            img.src = `https://api.qrserver.com/v1/create-qr-code/?size=250x250&data=${encodeURIComponent(qrCode)}`;
            qrContainer.appendChild(img);
        });
    </script>
</body>
</html>